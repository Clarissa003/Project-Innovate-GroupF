<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user_image"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_background" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bay Leaves"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/temperature"
            android:layout_width="171dp"
            android:layout_height="100dp"
            android:text="Temperature"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            android:backgroundTint="#D9D9D9"
            tools:ignore="DuplicateIds" />

        <androidx.cardview.widget.CardView
            android:id="@+id/moisture"
            android:layout_width="171dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#D9D9D9"
            android:text="Temperature"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            tools:ignore="DuplicateIds" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/sunlight"
        android:layout_width="375dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:text="Temperature"
        android:textColor="@color/black"
        android:backgroundTint="#D9D9D9"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/wlevel"
            android:layout_width="171dp"
            android:layout_height="100dp"
            android:text="Temperature"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            android:backgroundTint="#D9D9D9"
            tools:ignore="DuplicateIds" />

        <androidx.cardview.widget.CardView
            android:id="@+id/humidity"
            android:layout_width="171dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#D9D9D9"
            android:text="temperature"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            tools:ignore="DuplicateIds" />


    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:text="Automatic watering" />

    <TextView
        android:id="@+id/watering"
        android:layout_width="155dp"
        android:layout_height="37dp"
        android:textSize="10dp"
        android:text="With this feature turned off, youâ€™ll need to water your plant yourself" />

</LinearLayout>

